<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".change_information2">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"

            android:background="#6078ea"
            android:fontFamily="@font/hanglrum"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="ICD Shop"
            android:textColor="#6078ea"
            android:textSize="5dp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginLeft="0dp"

            android:background="#6078ea"
            android:fontFamily="@font/hanglrum"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="ICD Shop"
            android:textColor="#ffffff"
            android:textSize="40dp"></TextView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="회원정보 수정"
                android:fontFamily="@font/interpark"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="35dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="이름"
                    android:fontFamily="@font/interpark"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/change_name"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:hint="새 이름을 입력하세요."
                    android:fontFamily="@font/interpark"
                    android:textColor="#000000"
                    android:textColorHint="@color/colorGray"
                    android:textSize="20dp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="이메일"
                    android:fontFamily="@font/interpark"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/change_mail"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:hint="새 이메일을 입력하세요."
                    android:fontFamily="@font/interpark"
                    android:textColor="#000000"
                    android:textColorHint="@color/colorGray"
                    android:textSize="20dp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:text="휴대폰"
                    android:textColor="#000000"
                    android:fontFamily="@font/interpark"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/change_phone"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:hint="새 휴대폰번호를 입력하세요."
                    android:fontFamily="@font/interpark"
                    android:textColor="#000000"
                    android:textColorHint="@color/colorGray"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="비밀번호 변경"
                android:fontFamily="@font/interpark"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="228dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:textColor="#000000">


                <EditText
                    android:id="@+id/change_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/table_outside"
                    android:fontFamily="@font/interpark"
                    android:hint="새 비밀번호를 입력하세요"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textColorHint="#D5D5D5"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/change_passcheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/table_outside"
                    android:fontFamily="@font/interpark"
                    android:hint="새 비밀번호를 한번 더 확인해주세요"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textColorHint="#D5D5D5"
                    android:textSize="15dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_completed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:background="#A9A9F5"
                android:fontFamily="@font/interpark"
                android:padding="20dp"

                android:text="회원정보 수정"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"

            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_home"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"


                android:background="#819FF7"
                android:drawableStart="@drawable/ic_menu_white_24dp"
                android:drawableLeft="@drawable/ic_menu_white_24dp"
                android:padding="40dp"/>

            <Button
                android:id="@+id/btn_userinfo"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"


                android:background="#819FF7"
                android:drawableStart="@drawable/ic_shop_white_24dp"
                android:drawableLeft="@drawable/ic_shop_white_24dp"

                android:padding="40dp"
                />

            <Button
                android:id="@+id/btn_stock"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"


                android:background="#819FF7"
                android:drawableStart="@drawable/ic_stock_white_24dp"
                android:drawableLeft="@drawable/ic_stock_white_24dp"
                android:padding="40dp"
                />

            <Button
                android:id="@+id/btn_sales"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"


                android:background="#819FF7"
                android:drawableStart="@drawable/ic_user_change_white_24dp"
                android:drawableLeft="@drawable/ic_user_change_white_24dp"
                android:padding="40dp"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>