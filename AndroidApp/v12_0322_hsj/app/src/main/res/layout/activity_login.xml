<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:background="#ffffff"
        android:scaleType="centerInside"

        android:src="@drawable/icd_logo"></ImageButton>



    <EditText
        android:id="@+id/et_id"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/table_outside"
        android:fontFamily="@font/interpark"
        android:layout_marginTop="50dp"
        android:hint="아이디를 입력해 주세요"
        android:padding="10dp"
        android:text=""
        android:textColor="#000000"
        android:textColorHint="#D5D5D5"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/table_outside"
        android:fontFamily="@font/interpark"
        android:hint="비밀번호를 입력해 주세요"
        android:inputType="textPassword"
        android:padding="10dp"
        android:text=""
        android:textColor="#000000"
        android:textColorHint="#D5D5D5"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="#6078ea"
        android:fontFamily="@font/interpark"
        android:padding="10dp"
        android:text="로그인"
        android:textSize="20dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="130dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:stretchColumns="*">



            <Button
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:text="회원가입"
                android:fontFamily="@font/interpark"
                android:background="@drawable/btn_stroke"
                android:textColor="#848484"
                ></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="|"
                android:textColor="#848484"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"></TextView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_stroke"
                android:text="아이디 찾기"
                android:fontFamily="@font/interpark"
                android:textColor="#848484"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="|"
                android:textColor="#848484"></TextView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_stroke"
                android:text="비밀번호 찾기"
                android:fontFamily="@font/interpark"
                android:textColor="#848484"></Button>

</LinearLayout>
</LinearLayout>