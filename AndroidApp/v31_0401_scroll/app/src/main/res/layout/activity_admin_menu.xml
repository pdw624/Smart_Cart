<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".AdminMenu">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="#6078ea"
        android:fontFamily="@font/hanglrum"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:text="ICD Shop"
        android:textColor="#ffffff"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"></TextView>

    <ImageView

        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:background="#ffffff"
        android:paddingTop="20dp"
        android:src="@drawable/admin"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:layout_editor_absoluteX="0dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:fontFamily="@font/interpark"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:text="관리자 모드"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_userinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/selector_ex"
        android:drawableStart="@drawable/ic_people_black_24dp"
        android:drawableLeft="@drawable/ic_people_black_24dp"
        android:fontFamily="@font/interpark"
        android:padding="20dp"
        android:text="회원 관리"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/selector_ex"
        android:drawableStart="@drawable/ic_stock_black_24dp"
        android:drawableLeft="@drawable/ic_stock_black_24dp"
        android:fontFamily="@font/interpark"
        android:padding="20dp"
        android:text="재고 관리"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_userinfo"
        app:layout_constraintStart_toStartOf="@+id/btn_userinfo"
        app:layout_constraintTop_toBottomOf="@+id/btn_userinfo" />

    <Button
        android:id="@+id/btn_sales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/selector_ex"
        android:drawableStart="@drawable/ic_money_black_24dp"
        android:drawableLeft="@drawable/ic_money_black_24dp"
        android:fontFamily="@font/interpark"
        android:padding="20dp"
        android:text="매출액 관리"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_stock"
        app:layout_constraintStart_toStartOf="@+id/btn_stock"
        app:layout_constraintTop_toBottomOf="@+id/btn_stock" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/selector_ex"
        android:drawableStart="@drawable/ic_money_black_24dp"
        android:drawableLeft="@drawable/ic_money_black_24dp"
        android:fontFamily="@font/interpark"
        android:padding="20dp"
        android:text="로그아웃"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_sales"
        app:layout_constraintStart_toStartOf="@+id/btn_sales"
        app:layout_constraintTop_toBottomOf="@+id/btn_sales" />">

</androidx.constraintlayout.widget.ConstraintLayout>