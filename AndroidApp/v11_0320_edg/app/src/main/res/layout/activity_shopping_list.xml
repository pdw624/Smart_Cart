<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".ShoppingList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="#000000"
        android:orientation="horizontal">
        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="45dp"
            android:layout_height="44dp"
            android:src="@drawable/cart_icon"></ImageButton>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ICD Shop"
            android:textColor="#FFFFFF"
            android:textSize="35dp"></TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/purchase_viewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="fill_horizontal"
        android:text="장바구니"
        android:textColor="#000000"
        android:textSize="36sp" />


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="상품명"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="상품금액"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="상품 수량"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="350dp">

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:divider="#d1d1d1"
                android:dividerHeight="10dp">
            </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="총 액"
            android:textSize="20dp"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/pay"
            android:layout_marginLeft="100dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="20dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:id="@+id/btn_return"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="반품하기"
            android:textSize="20dp"></Button>

        <Button
            android:textColor="#ffffff"
            android:id="@+id/btn_order"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:background="@color/colorPrimaryDark"
            android:text="구매하기"
            android:layout_marginRight="10dp"
            android:textSize="20dp"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="2dp">

        <Button
            android:id="@+id/btn_userinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_stroke"
            android:padding="20dp"
            android:text="장바구니"
            android:textColor="#000000"
            android:textSize="15dp"
            android:drawableStart="@drawable/ic_shop_black_24dp"
            android:drawableLeft="@drawable/ic_shop_black_24dp" />

        <Button
            android:id="@+id/btn_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_stroke"
            android:padding="20dp"
            android:text="주문 이력"
            android:textColor="#000000"
            android:textSize="15dp"
            android:drawableStart="@drawable/ic_stock_black_24dp"
            android:drawableLeft="@drawable/ic_stock_black_24dp"/>

        <Button
            android:id="@+id/btn_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_stroke"
            android:padding="20dp"
            android:text="내 정보관리"
            android:textColor="#000000"
            android:textSize="15dp"
            android:drawableStart="@drawable/ic_user_change_black_24dp"
            android:drawableLeft="@drawable/ic_user_change_black_24dp"/>
    </LinearLayout>

</LinearLayout>

