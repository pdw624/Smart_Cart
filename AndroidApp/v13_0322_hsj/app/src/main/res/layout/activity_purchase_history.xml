<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".purchase_history">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"

        android:background="#6078ea"
        android:fontFamily="@font/hanglrum"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="ICD Shop"
        android:textColor="#6078ea"
        android:textSize="5dp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginLeft="0dp"

        android:background="#6078ea"
        android:fontFamily="@font/hanglrum"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="ICD Shop"
        android:textColor="#ffffff"
        android:textSize="40dp"></TextView>

    <TextView
        android:id="@+id/purchase_viewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:gravity="fill_horizontal"
        android:text="OOO 님의 구매이력"
        android:fontFamily="@font/interpark"
        android:textColor="#000000"
        android:textSize="36sp" />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="상품명"
            android:fontFamily="@font/interpark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="상품금액"
            android:fontFamily="@font/interpark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="구매 날짜"
            android:fontFamily="@font/interpark"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="330dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/purchase_listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:divider="#d1d1d1"
                android:dividerHeight="10dp">
            </ListView>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="총 액"
            android:fontFamily="@font/interpark"
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/pay"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:fontFamily="@font/interpark"
            android:textColor="#000000"
            android:textSize="25dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"

        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_home"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"


            android:background="#819FF7"
            android:drawableStart="@drawable/ic_menu_white_24dp"
            android:drawableLeft="@drawable/ic_menu_white_24dp"
            android:padding="40dp"/>

        <Button
            android:id="@+id/btn_userinfo"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"


            android:background="#819FF7"
            android:drawableStart="@drawable/ic_shop_white_24dp"
            android:drawableLeft="@drawable/ic_shop_white_24dp"

            android:padding="40dp"
            />

        <Button
            android:id="@+id/btn_stock"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"


            android:background="#819FF7"
            android:drawableStart="@drawable/ic_stock_white_24dp"
            android:drawableLeft="@drawable/ic_stock_white_24dp"
            android:padding="40dp"
            />

        <Button
            android:id="@+id/btn_sales"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"


            android:background="#819FF7"
            android:drawableStart="@drawable/ic_user_change_white_24dp"
            android:drawableLeft="@drawable/ic_user_change_white_24dp"
            android:padding="40dp"
            />

    </LinearLayout>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
