<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".cartConnection">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"

        android:background="#6078ea"
        android:fontFamily="@font/hanglrum"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="ICD Shop"
        android:textColor="#6078ea"
        android:textSize="5dp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginLeft="0dp"

        android:background="#6078ea"
        android:fontFamily="@font/hanglrum"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="ICD Shop"
        android:textColor="#ffffff"
        android:textSize="40dp"></TextView>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/interpark"
        android:gravity="fill_horizontal"
        android:text="카트선택"
        android:textColor="#000000"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/cart" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="100dp"

            app:srcCompat="@drawable/cart" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:orientation="horizontal">>

        <Button
            android:id="@+id/cart_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#606078ea"
            android:padding="15dp"
            android:layout_marginLeft="10dp"
            android:text="1번 카트"
            android:textColor="#5D5D5D"
            android:textSize="13dp"/>


        <Button
            android:id="@+id/cart_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="100dp"
            android:padding="15dp"
            android:background="#606078ea"
            android:textColor="#5D5D5D"
            android:text="2번 카트"
            android:textSize="13dp"
            />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="40dp">


        <ImageView
            android:gravity="center"
            android:id="@+id/imageView3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/cart" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="100dp"
            app:srcCompat="@drawable/cart" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/cart_btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:background="#606078ea"
            android:padding="15dp"
            android:text="3번 카트"
            android:textColor="#5D5D5D"
            android:textSize="13dp" />

        <Button
            android:id="@+id/cart_btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="100dp"
            android:background="#606078ea"
            android:padding="15dp"
            android:text="4번 카트"
            android:textColor="#5D5D5D"
            android:textSize="13dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"

        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_home"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"


            android:background="#8BBDFF"
            android:drawableStart="@drawable/ic_menu_white_24dp"
            android:drawableLeft="@drawable/ic_menu_white_24dp"
            android:padding="50dp"/>

        <Button
            android:id="@+id/btn_userinfo"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"


            android:background="#8BBDFF"
            android:drawableStart="@drawable/ic_shop_white_24dp"
            android:drawableLeft="@drawable/ic_shop_white_24dp"

            android:padding="50dp"
            />

        <Button
            android:id="@+id/btn_stock"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"


            android:background="#8BBDFF"
            android:drawableStart="@drawable/ic_stock_white_24dp"
            android:drawableLeft="@drawable/ic_stock_white_24dp"
            android:padding="50dp"
            />

        <Button
            android:id="@+id/btn_sales"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"


            android:background="#8BBDFF"
            android:drawableStart="@drawable/ic_user_change_white_24dp"
            android:drawableLeft="@drawable/ic_user_change_white_24dp"
            android:padding="50dp"
            />

    </LinearLayout>


</LinearLayout>

