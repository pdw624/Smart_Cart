<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".change_information">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"

            android:background="#6078ea"
            android:fontFamily="@font/hanglrum"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="ICD Shop"
            android:textColor="#6078ea"
            android:textSize="5dp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginLeft="0dp"

            android:background="#6078ea"
            android:fontFamily="@font/hanglrum"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="ICD Shop"
            android:textColor="#ffffff"
            android:textSize="40dp"></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_info_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="OOO 님"
                android:fontFamily="@font/interpark"
                android:background="#ffffff"
                android:textColor="#000000"
                android:textSize="35dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="회원정보"
                android:fontFamily="@font/interpark"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="35dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >




        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
            android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:text="이름"
                android:fontFamily="@font/interpark"
                android:textSize="20dp"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/view_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:text="TextView"
                android:fontFamily="@font/interpark"
                android:textSize="20dp"
                android:textColor="#000000"/>
        </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:text="이메일"
                    android:fontFamily="@font/interpark"
                    android:textSize="20dp"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/view_mail"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:text="TextView"
                    android:fontFamily="@font/interpark"
                    android:textSize="20dp"
                    android:textColor="#000000"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:text="휴대폰"
                    android:fontFamily="@font/interpark"
                    android:textSize="20dp"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/view_phone"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:text="TextView"
                    android:fontFamily="@font/interpark"
                    android:textSize="20dp"
                    android:textColor="#000000"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="221dp">


            <Button
                android:id="@+id/btn_change_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="30dp"
                android:background="#A9A9F5"
                android:fontFamily="@font/interpark"
                android:padding="20dp"
                android:scaleType="centerInside"
                android:text="회원정보 수정"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"

            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_home"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"


                android:background="#819FF7"
                android:drawableStart="@drawable/ic_menu_white_24dp"
                android:drawableLeft="@drawable/ic_menu_white_24dp"
                android:padding="40dp"/>

            <Button
                android:id="@+id/btn_userinfo"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"


                android:background="#819FF7"
                android:drawableStart="@drawable/ic_shop_white_24dp"
                android:drawableLeft="@drawable/ic_shop_white_24dp"

                android:padding="40dp"
                />

            <Button
                android:id="@+id/btn_stock"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"


                android:background="#819FF7"
                android:drawableStart="@drawable/ic_stock_white_24dp"
                android:drawableLeft="@drawable/ic_stock_white_24dp"
                android:padding="40dp"
                />

            <Button
                android:id="@+id/btn_sales"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"


                android:background="#819FF7"
                android:drawableStart="@drawable/ic_user_change_white_24dp"
                android:drawableLeft="@drawable/ic_user_change_white_24dp"
                android:padding="40dp"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
