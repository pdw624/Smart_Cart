<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <TextView
        android:id="@+id/textView37"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6078ea"
        android:fontFamily="@font/hanglrum"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:text="ICD Shop"
        android:textColor="#ffffff"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp"></TextView>

    <TextView
        android:id="@+id/textView38"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/interpark"
        android:text="회원정보 수정"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView37" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/interpark"
        android:text="이름"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView38" />

    <EditText
        android:id="@+id/change_name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/selector_ex"
        android:fontFamily="@font/interpark"
        android:hint="새 이름을 입력하세요."
        android:maxLength="20"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="@color/colorGray"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView39"
        app:layout_constraintTop_toBottomOf="@+id/textView38" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/interpark"
        android:text="이메일"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView39" />

    <EditText
        android:id="@+id/change_mail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/selector_ex"
        android:fontFamily="@font/interpark"
        android:hint="hongildong@email.com"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="@color/colorGray"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/change_name"
        app:layout_constraintTop_toBottomOf="@+id/change_name" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/interpark"
        android:text="휴대폰"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView41" />

    <EditText
        android:id="@+id/change_phone"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/selector_ex"
        android:fontFamily="@font/interpark"
        android:hint="'-' 없이 입력하세요."
        android:padding="10dp"
        android:textColor="#000000"
        android:maxLength="11"
        android:textColorHint="@color/colorGray"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_mail" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/interpark"
        android:text="비밀번호 변경"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView42" />

    <EditText
        android:id="@+id/change_pass"
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/selector_ex"
        android:fontFamily="@font/interpark"
        android:hint="새 비밀번호를 입력하세요"
        android:inputType="textPassword"
        android:padding="10dp"
        android:text=""
        android:textColor="#000000"
        android:textColorHint="#D5D5D5"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView40" />

    <EditText
        android:id="@+id/change_passcheck"
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_ex"
        android:fontFamily="@font/interpark"
        android:hint="새 비밀번호를 한번 더 확인해주세요"
        android:inputType="textPassword"
        android:padding="10dp"
        android:text=""
        android:textColor="#000000"
        android:textColorHint="#D5D5D5"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/change_pass"
        app:layout_constraintStart_toStartOf="@+id/change_pass"
        app:layout_constraintTop_toBottomOf="@+id/change_pass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/interpark"
        android:text="문자, 숫자를 조합하여 6~12자로 입력해주세요."
        android:textColor="#0100FF"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_passcheck" />

    <Button
        android:id="@+id/btn_completed"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:background="#A9A9F5"
        android:fontFamily="@font/interpark"
        android:padding="15dp"
        android:text="회원정보 수정"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/change_passcheck"
        app:layout_constraintStart_toStartOf="@+id/change_passcheck"
        app:layout_constraintTop_toBottomOf="@+id/change_passcheck" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>