<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/textView32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6078ea"
        android:fontFamily="@font/hanglrum"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="ICD Shop"
        android:textColor="#6078ea"
        android:textSize="5dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"></TextView>

    <TextView
        android:id="@+id/textView37"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="#6078ea"
        android:fontFamily="@font/hanglrum"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="ICD Shop"
        android:textColor="#ffffff"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textView32"
        tools:layout_editor_absoluteX="16dp"></TextView>

    <TextView
        android:id="@+id/textView38"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/interpark"
        android:text="회원정보 수정"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView37" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/interpark"
        android:text="이름"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView38" />

    <EditText
        android:id="@+id/change_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:fontFamily="@font/interpark"
        android:hint="새 이름을 입력하세요."
        android:textColor="#000000"
        android:textColorHint="@color/colorGray"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView38" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/interpark"
        android:text="이메일"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView39" />

    <EditText
        android:id="@+id/change_mail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:fontFamily="@font/interpark"
        android:hint="새 이메일을 입력하세요."
        android:textColor="#000000"
        android:textColorHint="@color/colorGray"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_name" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/interpark"
        android:text="휴대폰"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView41" />

    <EditText
        android:id="@+id/change_phone"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:fontFamily="@font/interpark"
        android:hint="새 휴대폰번호를 입력하세요."
        android:textColor="#000000"
        android:textColorHint="@color/colorGray"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_mail" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/interpark"
        android:text="비밀번호 변경"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView42" />

    <EditText
        android:id="@+id/change_pass"
        android:layout_width="340dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/table_outside"
        android:fontFamily="@font/interpark"
        android:hint="새 비밀번호를 입력하세요"
        android:inputType="textPassword"
        android:padding="10dp"
        android:text=""
        android:textColor="#000000"
        android:textColorHint="#D5D5D5"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/change_phone"
        app:layout_constraintStart_toStartOf="@+id/textView40"
        app:layout_constraintTop_toBottomOf="@+id/textView40" />

    <EditText
        android:id="@+id/change_passcheck"
        android:layout_width="341dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/table_outside"
        android:fontFamily="@font/interpark"
        android:hint="새 비밀번호를 한번 더 확인해주세요"
        android:inputType="textPassword"
        android:padding="10dp"
        android:text=""
        android:textColor="#000000"
        android:textColorHint="#D5D5D5"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/change_pass"
        app:layout_constraintStart_toStartOf="@+id/change_pass"
        app:layout_constraintTop_toBottomOf="@+id/change_pass" />

    <Button
        android:id="@+id/btn_completed"
        android:layout_width="335dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="#A9A9F5"
        android:fontFamily="@font/interpark"
        android:padding="20dp"
        android:text="회원정보 수정"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/change_passcheck"
        app:layout_constraintStart_toStartOf="@+id/change_passcheck"
        app:layout_constraintTop_toBottomOf="@+id/change_passcheck"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="#819FF7"
        android:drawableStart="@drawable/ic_menu_white_24dp"
        android:drawableLeft="@drawable/ic_menu_white_24dp"
        android:padding="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_userinfo"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_userinfo"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="#819FF7"
        android:drawableStart="@drawable/ic_shop_white_24dp"
        android:drawableLeft="@drawable/ic_shop_white_24dp"
        android:padding="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_stock" />

    <Button
        android:id="@+id/btn_stock"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="#819FF7"
        android:drawableStart="@drawable/ic_stock_white_24dp"
        android:drawableLeft="@drawable/ic_stock_white_24dp"
        android:padding="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_sales" />

    <Button
        android:id="@+id/btn_sales"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="#819FF7"
        android:drawableStart="@drawable/ic_user_change_white_24dp"
        android:drawableLeft="@drawable/ic_user_change_white_24dp"
        android:padding="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>