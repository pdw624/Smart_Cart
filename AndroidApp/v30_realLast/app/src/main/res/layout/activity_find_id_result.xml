<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".find_id_result">

    <TextView
        android:id="@+id/textView43"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/interpark"
        android:gravity="center"
        android:text="아이디 찾기"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/backspace2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:src="@drawable/ic_keyboard_backspace_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/textView43"
        app:layout_constraintTop_toTopOf="@+id/textView43" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/interpark"
        android:gravity="center"
        android:hint="ooo 님의 아이디는\n 00000 입니다."
        android:padding="10dp"
        android:background="@drawable/selector_ex"
        android:textColorHint="@color/colorGray"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView43" />


    <Button
        android:id="@+id/btn_login2"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#6078ea"
        android:fontFamily="@font/interpark"
        android:gravity="center"
        android:text="로그인"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textView46"
        app:layout_constraintHorizontal_bias="0.774"
        app:layout_constraintStart_toStartOf="@+id/textView46"
        app:layout_constraintTop_toBottomOf="@+id/textView46" />

    <Button
        android:id="@+id/btn_pass"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#6078ea"
        android:fontFamily="@font/interpark"
        android:gravity="center"
        android:text="비밀번호 찾기"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_login2"
        app:layout_constraintHorizontal_bias="0.774"
        app:layout_constraintStart_toStartOf="@+id/btn_login2"
        app:layout_constraintTop_toBottomOf="@+id/btn_login2" />


    <TextView
        android:id="@+id/textView47"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_ex"
        android:drawableTop="@drawable/ic_info_outline_black_24dp"
        android:fontFamily="@font/interpark"
        android:gravity="center"
        android:padding="20dp"
        android:text="\n비밀번호를 찾고 싶으신가요?\n상단 버튼을 눌러주세요.\n어려움이 있으시다면\n고객센터 1588-0000로 문의 바랍니다."
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_find_id"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/btn_pass"
        app:layout_constraintTop_toBottomOf="@+id/btn_pass" />


</androidx.constraintlayout.widget.ConstraintLayout>