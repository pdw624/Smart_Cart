<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".purchase_history">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="#000000"
        android:orientation="horizontal">
        <ImageButton
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="45dp"
            android:layout_height="44dp"
            android:src="@drawable/cart_icon"></ImageButton>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ICD Shop"
            android:textColor="#FFFFFF"
            android:textSize="35dp"></TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/purchase_viewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="fill_horizontal"
        android:text="OOO 님의 구매이력"
        android:textColor="#000000"
        android:textSize="36sp" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="상품명"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="상품금액"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="구매 날짜"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="340dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/purchase_listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:divider="#d1d1d1"
                android:dividerHeight="10dp">
            </ListView>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="총 액"
            android:textSize="25dp"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/pay"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="25dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="2dp">

        <Button
            android:id="@+id/btn_home"
            android:layout_width="100dp"
            android:layout_height="77dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_stroke"
            android:drawableStart="@drawable/ic_menu_black_24dp"
            android:drawableLeft="@drawable/ic_menu_black_24dp"

            android:padding="20dp"
            android:text="메뉴"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_userinfo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_stroke"
            android:padding="20dp"
            android:text="장바구니"
            android:textColor="#000000"
            android:textSize="15dp"
            android:drawableStart="@drawable/ic_shop_black_24dp"
            android:drawableLeft="@drawable/ic_shop_black_24dp" />

        <Button
            android:id="@+id/btn_stock"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_stroke"
            android:padding="20dp"
            android:text="주문이력"
            android:textColor="#000000"
            android:textSize="15dp"
            android:drawableStart="@drawable/ic_stock_black_24dp"
            android:drawableLeft="@drawable/ic_stock_black_24dp"/>

        <Button
            android:id="@+id/btn_sales"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_stroke"
            android:padding="20dp"
            android:text="정보관리"
            android:textColor="#000000"
            android:textSize="15dp"
            android:drawableStart="@drawable/ic_user_change_black_24dp"
            android:drawableLeft="@drawable/ic_user_change_black_24dp"/>
    </LinearLayout>

</LinearLayout>

