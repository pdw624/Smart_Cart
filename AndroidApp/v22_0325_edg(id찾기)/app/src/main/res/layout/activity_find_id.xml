<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".find_id">

    <TextView
        android:id="@+id/textView43"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/interpark"
        android:gravity="center"
        android:text="아이디 찾기"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/backspace1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:src="@drawable/ic_keyboard_backspace_black_24dp"
        app:layout_constraintEnd_toStartOf="@+id/textView43"
        app:layout_constraintTop_toTopOf="@+id/textView43" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/interpark"
        android:gravity="center"
        android:text="회원 가입 시 등록하신 정보로\n아이디를 확인하실 수 있습니다."
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView43" />


    <EditText
        android:id="@+id/find_id_name"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_ex"
        android:fontFamily="@font/interpark"
        android:hint="이름을 입력해주세요."
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="@color/colorGray"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView46" />


    <EditText
        android:id="@+id/find_id_email"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_ex"
        android:fontFamily="@font/interpark"
        android:hint="이메일을 입력해주세요."
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="@color/colorGray"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/find_id_name"
        app:layout_constraintStart_toStartOf="@+id/find_id_name"
        app:layout_constraintTop_toBottomOf="@+id/find_id_name" />

    <Button
        android:id="@+id/btn_find_id"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#6078ea"
        android:fontFamily="@font/interpark"
        android:gravity="center"
        android:text="확인"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/find_id_email"
        app:layout_constraintHorizontal_bias="0.774"
        app:layout_constraintStart_toStartOf="@+id/find_id_email"
        app:layout_constraintTop_toBottomOf="@+id/find_id_email" />



    <TextView
        android:id="@+id/textView47"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_ex"
        android:drawableTop="@drawable/ic_info_outline_black_24dp"
        android:fontFamily="@font/interpark"
        android:gravity="center"
        android:padding="20dp"
        android:text="\n아이디를 찾지 못하셨나요?\n아이디 찾기에 어려움이 있으시다면\n고객센터 1588-0000로 문의 바랍니다."
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_find_id"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/btn_find_id"
        app:layout_constraintTop_toBottomOf="@+id/btn_find_id" />


</androidx.constraintlayout.widget.ConstraintLayout>